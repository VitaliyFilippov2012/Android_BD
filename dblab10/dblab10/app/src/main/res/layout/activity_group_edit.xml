<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupEdit">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fText"
                android:text="Факультет:"
                android:textSize="20dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/fText"/>
            <TextView
                android:id="@+id/сText"
                android:text="Курс:"
                android:textSize="20dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fText"/>
            <EditText
                android:id="@+id/сedit"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/fText"
                android:layout_toRightOf="@id/сText"/>
            <TextView
                android:id="@+id/mText"
                android:text="Именование:"
                android:textSize="20dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/сText"/>
            <EditText
                android:id="@+id/medit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/mText"
                android:layout_below="@id/сText"/>
            <TextView
                android:id="@+id/stText"
                android:text="Староста:"
                android:textSize="20dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mText"/>
            <Spinner
                android:id="@+id/stspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/stText"
                android:layout_below="@id/mText"/>
            <Button
                android:id="@+id/addbutton"
                android:text="Добавить"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="addClick"
                android:layout_below="@id/stspinner"/>
            <Button
                android:id="@+id/changebutton"
                android:text="Изменить"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ChangeClick"
                android:layout_below="@id/addbutton"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>